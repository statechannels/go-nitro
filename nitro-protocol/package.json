{
  "name": "@statechannels/nitro-protocol",
  "version": "2.0.0-alpha.0",
  "description": "Smart contracts and typescript libraries for nitro v2",
  "main": "index.js",
  "files": [
    "/contracts/**/*.sol"
  ],
  "scripts": {
    "contracts:deploy-localhost": "npx hardhat deploy --network localhost --export-all addresses.json && node ./scripts/postdeploy.ts",
    "contracts:deploy-goerli": "npx hardhat deploy --network goerli --export-all addresses.json && node ./scripts/postdeploy.js",
    "contracts:deploy-wallaby": "npx hardhat --network wallaby deploy",
    "contracts:node": "npx hardhat node --no-deploy",
    "test": "npm run test:contracts && npm run test:app --all",
    "test:app": "npx hardhat compile && jest -c ./config/jest/jest.config.js",
    "test:contracts": "npx hardhat compile && jest -c ./config/jest/jest.contracts.config.js",
    "test:fevm": "jest -c ./config/jest/jest.fevmContracts.config.js --silent=false",
    "lint:check": "npx eslint \"./\" --cache && npm run solhint:check && npm run prettier:check",
    "lint:write": "npx eslint \"./\" --fix && npm run prettier:write",
    "solhint:check": "npx solhint -w 0 './contracts/**/*.sol'",
    "solhint:write": "echo 'This command does not seem to work. Use npm run prettier:write ' && npx solhint --fix './contracts/**/*.sol'",
    "prettier:check": "prettier --check './contracts/**/*.sol'",
    "prettier:write": "prettier --write './contracts/**/*.sol'",
    "benchmark:diff": "npx hardhat compile && jest -c ./config/jest/jest.gas-benchmarks.config.js",
    "benchmark:update": "npx hardhat run gas-benchmarks/exportBenchmarkResults.ts",
    "benchmark": "npm run benchmark:diff || npm run benchmark:update"
  },
  "keywords": [],
  "author": "statechannels.org",
  "license": "ISC",
  "devDependencies": {
    "hardhat-deploy": "^0.11.18",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.3",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@statechannels/devtools": "^0.5.7",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/jest": "^27.4.1",
    "@types/lodash.isequal": "^4.5.5",
    "@types/lodash.pick": "^4.4.6",
    "@types/lodash.shuffle": "^4.2.6",
    "@types/mocha": "^9.1.0",
    "@types/wait-on": "^5.3.1",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "chai": "^4.3.6",
    "dotenv": "^14.3.2",
    "eslint": "7.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "3.3.1",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.4",
    "hardhat": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.7",
    "hardhat-watcher": "^2.3.0",
    "jest": "^27.5.1",
    "lodash.isequal": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "lodash.shuffle": "^4.2.0",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.18",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.3",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.19.4",
    "@glif/filecoin-address": "^2.0.13",
    "@glif/filecoin-rpc-client": "^2.0.8",
    "@glif/filecoin-wallet-provider": "^2.0.11",
    "@openzeppelin/contracts": "^4.7.3",
    "@statechannels/exit-format": "^0.0.6",
    "@typechain/ethers-v5": "^9.0.0"
  }
}
